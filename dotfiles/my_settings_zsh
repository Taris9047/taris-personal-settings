  sh -c "curl https://raw.githubusercontent.com/holman/spark/master/spark -o $HOMEBREW/bin/spark && chmod +x $HOMEBREW/bin/spark"
fi

# Before just cleaning up... let's implement some fun stuff lol
if [ -x "$(command -v spark)" ] && [ -x "$(command -v lolcat)" ]; then
  alias clear='clear; echo; echo; seq 1 $(tput cols) | sort -R | spark | lolcat; echo; echo'
elif [ -x "$(command -v spark)" ] && [ ! -x "$(command -v lolcat)" ]; then
  alias clear='clear; echo; echo; seq 1 $(tput cols) | sort -R | spark | echo; echo'
fi
clear

check_uptime() {
  echo "$(awk '{print $1}' /proc/uptime)"
}

if [ -x "$(command -v neofetch)" ] && [ $(printf '%.0f' $(check_uptime)) -lt 2400 ]; then 
	neofetch
fi

# Lastly, cleaning up PATH
export PATH=$(printf "%s" "$PATH" | awk -v RS=':' '!a[$1]++ { if (NR > 1) printf RS; printf $1 }')
