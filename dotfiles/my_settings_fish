alias rsync='rsync -azvh --info=progress2'
alias sudo='sudo -H'
alias free='free -m'

alias aptup='sudo apt-get -y update && sudo apt-get -y upgrade'
alias aptin='sudo apt-get -y update && sudo apt-get -y upgrade && sudo apt-get install'
