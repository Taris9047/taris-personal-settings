# Profile...

. /etc/profile

# If on SSH...
if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then

  if [ -f "${HOME}/.bashrc" ]; then
    . "${HOME}/.bashrc"
  fi

  # Re-adding /usr/local/bin
  export PATH="/usr/local/bin:${PATH}"

  # Runs Starship on Tmux?
  if [ -x "$(command -v starship)" ]; then
    eval "$(starship init bash)"
  fi
fi
. "$HOME/.cargo/env"
